#!/usr/bin/make -f
# -*- makefile -*-

ARCHITECTURE := $(shell dpkg-architecture -qDEB_HOST_ARCH)

archconfflags := --prefix=/usr

ifeq ($(ARCHITECTURE), hurd-i386)
  archconfflags := $(archconfflags) --enable-jack --disable-alsa --disable-oss
else
ifeq ($(ARCHITECTURE), kfreebsd-amd64)
  archconfflags := $(archconfflags) --enable-jack --disable-alsa
else
ifeq ($(ARCHITECTURE), kfreebsd-i386)
  archconfflags := $(archconfflags) --enable-jack --disable-alsa
else
  archconfflags := $(archconfflags) --enable-jack --enable-alsa
endif
endif
endif

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh --with quilt --with autoreconf $@

override_dh_autoreconf:
	mkdir -p m4/generated
	dh_autoreconf

override_dh_auto_configure:
	CFLAGS="$(CFLAGS)" ./configure $(archconfflags) --program-transform-name='s/pd$$/puredata/'

override_dh_install:
	dh_install -X "*.la" -X "LICENSE.txt"

override_dh_installchangelogs:
	dh_installchangelogs src/CHANGELOG.txt

override_dh_fixperms:
	dh_fixperms
	find debian/puredata-extra/ -type f -name "*.pd_linux" -exec \
		chmod 0644 {} +
	find debian/puredata-gui/ -type f -name "pkg_mkIndex.tcl" -exec \
		chmod 0755 {} +

override_dh_shlibdeps: 
	dh_shlibdeps
	find debian/puredata-extra/ -type f -name "*.pd_linux" -exec \
		dpkg-shlibdeps -Tdebian/puredata-extra.substvars {} +

override_dh_strip:
	dh_strip
	find debian/puredata-extra/ -type f -name "*.pd_linux" -exec \
		strip --remove-section=.comment --remove-section=.note --strip-unneeded {} +

override_dh_compress:
	dh_compress -X.pd -X.wav -X.aiff -X.txt

